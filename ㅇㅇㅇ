<body>
  <button onclick="copyText()">📋 내용 복사하기</button>

  <script>
    function copyText() {
      const text = `여기에 복사할 내용을 입력하세요.`;
      navigator.clipboard.writeText(text)
        .then(() => alert('복사 완료!'))
        .catch(err => alert('복사 실패: ' + err));
    }
  </script>
</body>
